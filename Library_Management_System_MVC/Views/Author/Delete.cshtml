@model Library_Management_System_MVC.Models.Author
@{
    ViewBag.Title = "Yazar Sil";
}

<div class="card mx-auto mt-5 border-danger" style="max-width:400px;">
    <div class="card-body">
        <h3 class="mb-4 text-danger">Yazarı Sil</h3>
        <p><strong>@Model.FirstName @Model.LastName</strong> isimli yazarı silmek istediğinize emin misiniz?</p>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger">Evet, Sil</button>
            <a class="btn btn-outline-secondary" href="/Author/List">İptal</a>
        </form>
    </div>
</div>
