@model List<Library_Management_System_MVC.Models.Author>

@{
    ViewBag.Title = "Silinen Yazarlar";
}

<h2 class="mb-4">Silinen Yazarlar</h2>
<table class="table table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td>@author.DateOfBirth.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="/Author/Restore/@author.Id">Geri Al</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Silinmiş Yazar Yok.</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="/Author/List">Yazar Listesine Dön</a>